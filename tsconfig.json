{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src/**/**.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}